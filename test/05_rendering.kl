require Oculus;

operator entry() {
  // enable configure tracking already
  ovrDevice device(0, true);

  DrawingHandle handle();
  InlineDrawing drawing = handle.getDrawing();
  DrawContext context();

  PolygonMesh cube();
  cube.addCuboid(Xfo(), 3, 3, 3, true, true);

  Vec3 dummyResult;
  InlineInstance instance = null;
  handle.drawPolygonMesh("cube", Color(1.0, 0.0, 0.0), Color(1.0, 1.0, 1.0), 15.0, Xfo(), cube, false, true, dummyResult, instance);

  OGLStandaloneViewport viewport();
  // viewport.resize(context, 512, 512);
  drawing.registerViewport('default', viewport);

  ovrViewportCallback callback(device);
  callback.registerForViewport();


}
